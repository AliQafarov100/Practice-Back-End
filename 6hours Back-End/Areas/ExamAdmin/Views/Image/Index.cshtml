@model List<Image>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>

            <a asp-controller="Image" asp-action="Create" class="btn btn-primary">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Image image in Model)
                        {
                            <tr>
                                <td>
                                    @image.Id
                                </td>
                                <td>
                                    <img src="/assets/Image/Cards/@image.Photo" style="width: 150px; height: 90px;" />
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div class="Detail">
                                            <a asp-controller="Image" asp-action="Detail" asp-route-id="@image.Id" class="btn btn-primary">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div class="Edit">
                                            <a asp-controller="Image" asp-action="Edit" asp-route-id="@image.Id" class="btn btn-success">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div class="Delete">
                                            <a asp-controller="Image" asp-action="Delete" asp-route-id="@image.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>